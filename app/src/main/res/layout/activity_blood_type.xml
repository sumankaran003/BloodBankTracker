<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6f5ff"
    tools:context="in.karan.suman.bloodbanktracker.BloodTypeActivity">


    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#003d66"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="A+" />

    <Button
        android:id="@+id/button2"
        android:background="#005c99"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button1"
        android:text="A-" />
    <Button
        android:id="@+id/button3"
        android:background="#007acc"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button2"
        android:text="B+" />
    <Button
        android:id="@+id/button4"
        android:background="#0099ff"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button3"
        android:text="B-" />
    <Button
        android:id="@+id/button5"
        android:background="#33adff"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button4"
        android:text="AB+" />
    <Button
        android:id="@+id/button6"
        android:background="#66c2ff"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button5"
        android:text="AB-" />
    <Button
        android:id="@+id/button7"
        android:background="#99d6ff"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button6"
        android:text="O+" />
    <Button
        android:id="@+id/button8"
        android:background="#ccebff"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button7"
        android:text="O-" />


</RelativeLayout>
